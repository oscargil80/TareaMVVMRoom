<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.oscargil80.tareasroommvvm.ui.Fragments.HomeFragment"
        android:label="Listado de Personal"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_createPersonFragment"
            app:destination="@id/createPersonFragment" />
        <action
            android:id="@+id/action_homeFragment_to_editPersonFragment"
            app:destination="@id/editPersonFragment" />
    </fragment>
    <fragment
        android:id="@+id/editPersonFragment"
        android:name="com.oscargil80.tareasroommvvm.ui.Fragments.EditPersonFragment"
        android:label="Editar Personal"
        tools:layout="@layout/fragment_edit_person" >
        <action
            android:id="@+id/action_editPersonFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="data"
            app:argType="com.oscargil80.tareasroommvvm.Model.Personal" />
    </fragment>
    <fragment
        android:id="@+id/createPersonFragment"
        android:name="com.oscargil80.tareasroommvvm.ui.Fragments.CreatePersonFragment"
        android:label="Crear Personal"
        tools:layout="@layout/fragment_create_person" >
        <action
            android:id="@+id/action_createPersonFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>